<div class="head">
	<%= link_to 'back', root_url, :class =>'back-button' %>
</div>
  
<% form_for @user_session, :url => user_session_path do |form| %>   
<%= form.error_messages %>   
<ol class="login">   
  <li>   
    <%= form.label :username, "Username" %>   <br />
    <%= form.text_field :username, :class=>"login" %>   
  </li>   
  <li>   
    <%= form.label :password, "Password" %>   <br />
    <%= form.password_field :password,:class=>"login" %>   
  </li>   

  <li>   
    <%= form.submit "Submit" %>   
  </li>   
</ol>   
<% end %>  